{
  "name": "<%= name %>",
  "main": "<%= bundleFile || esFile %>",
  "jsnext:main": "<%= esFile %>",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register <%= entryPath %>/**/*.spec.js",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prebuild": "npm-run-all test",
    "watch": "cross-env NODE_ENV=development rollup -c -w",
    "browse": "browser-sync start --server --directory --files '<%= bundleFile || esFile %>' --no-notify --cors",
    "start": "npm-run-all --parallel watch browse"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-standalone": "^6.18.0",
    "browser-sync": "^2.17.3",
    "chai": "^3.5.0",
    "cross-env": "^3.1.2",
    "mocha": "^3.1.0",
    "npm-run-all": "^4.0.0",
    "rollup": "^0.40.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.1"
  }
}
