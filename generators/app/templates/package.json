{
  "name": "<%= name %>",
  "main": "<%= bundleFile || esFile %>",
  "jsnext:main": "<%= esFile %>",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register <%= entryPath %>/**/*.spec.js",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prebuild": "npm-run-all test",
    "watch": "cross-env NODE_ENV=development rollup -c -w",
    "start": "npm-run-all --parallel watch"
  }
}
